<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            app:layout_constraintLeft_toRightOf="@+id/address_remove"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/sahel"
            android:drawableRight="@drawable/ic_location_on_black_24dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/address_remove"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@id/address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/ic_delete_forever_black_24dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:contentDescription="@string/remove_address" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>
